{
  "name": "@shgysk8zer0/npm-utils",
  "version": "1.0.3",
  "description": "A collection of helpful functions for npm packages.",
  "type": "module",
  "main": "index.js",
  "engines": {
    "node": ">=18.0.0"
  },
  "exports": {
    ".": {
      "require": "./modules/index.cjs",
      "import": "index.js"
    },
    "./*": {
      "require": "./cjs/*.cjs",
      "import": "./modules/*.js"
    },
    "./*.js": {
      "require": "./cjs/*.cjs",
      "import": "./modules/*.js"
    }
  },
  "private": false,
  "scripts": {
    "test": "npm run lint:js && npm run build",
    "preversion": "npm test",
    "prepare": "npm run build",
    "lint:js": "eslint .",
    "fix:js": "eslint. --fix",
    "build": "npm run build:js",
    "build:js": "rollup -c rollup.config.js",
    "create:lock": "npm i --package-lock-only",
    "version:bump": "npm run version:bump:patch",
    "version:bump:patch": "npm version --no-git-tag-version patch",
    "version:bump:minor": "npm version --no-git-tag-version minor",
    "version:bump:major": "npm version --no-git-tag-version major"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/shgysk8zer0/npm-template.git"
  },
  "author": "Chris Zuber <admin@kernvalley.us>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/shgysk8zer0/npm-utils/issues"
  },
  "homepage": "https://github.com/shgysk8zer0/npm-utils#readme",
  "devDependencies": {
    "eslint": "^8.41.0",
    "rollup": "^3.23.0"
  },
  "dependencies": {
    "js-yaml": "^4.1.0"
  }
}
